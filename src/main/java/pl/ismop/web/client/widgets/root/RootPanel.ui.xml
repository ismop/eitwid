<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
		xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	<ui:with type="pl.ismop.web.client.widgets.root.RootPanelMessages" field="messages"/>
	<ui:style>
		.logout {
			padding-right: 30px;
		}
	</ui:style>
	<g:DockLayoutPanel>
		<g:north size="50">
			<b:Navbar>
				<b:NavbarBrand href="/">ISMOP</b:NavbarBrand>
					<b:NavbarNav>
						<b:AnchorListItem ui:field="levees"><ui:text from="{messages.leveesLabel}"/></b:AnchorListItem>
						<b:AnchorListItem ui:field="sensors"><ui:text from="{messages.sensorsLabel}"/></b:AnchorListItem>
						<b:AnchorListItem ui:field="experiments"></b:AnchorListItem>
						<b:AnchorListItem ui:field="experiment"><ui:text from="{messages.experimentLabel}"/></b:AnchorListItem>
					</b:NavbarNav>
					<b:NavbarText pull="RIGHT">
						<b:NavbarLink ui:field="logout" href="/logout" icon="SIGN_OUT" text="{messages.logoutLabel}" addStyleNames="{style.logout}"/>
						<g:FormPanel ui:field="logoutForm" action="/logout" method="POST">
							<g:Hidden ui:field="csrf"/>
						</g:FormPanel>
					</b:NavbarText>
			</b:Navbar>
		</g:north>
		<g:center>
			<g:HTMLPanel ui:field="mapPanel"/>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>