<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
		xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="pl.ismop.web.client.widgets.old.section.SectionViewMessages" field="messages"/>
	<ui:style>
		.name {
			margin-bottom: 5px;
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<div ui:field="threatPanel" class="panel">
			<div class="panel-heading">
				<div ui:field="header" class="{style.name}"></div>
				<div class="row">
					<div class="col-xs-4">
						<i class="fa fa-tasks fa-5x"></i>
					</div>
					<div class="col-xs-8 text-right">
						<p class="announcement-heading"><strong><ui:text from="{messages.threatLabel}"/></strong></p>
						<p ui:field="threat" class="announcement-text"></p>
					</div>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>