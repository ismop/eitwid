<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	<ui:style>
		.panel {
			width: 100%;
			height: 100%;
			background-color: white;
		}

		.slider {
			padding-top: 30px;
		}

		.panels {
			margin: 15px;
		}

		.scroll-panel {
			height:  literal("calc(100% - 105px)");;
			width: 100%;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panel}">
		<g:FlowPanel ui:field="sliderPanel" addStyleNames="{style.slider}" />
		<hr />
		<g:ScrollPanel ui:field="panels" addStyleNames="{style.scroll-panel}">
			<g:FlowPanel addStyleNames="{style.panels}">
				<b:Panel>
					<b:PanelHeader>
						<b:Heading size="H3" text="Chart"/>
					</b:PanelHeader>
					<b:PanelBody>
						<g:Label text="body" />
					</b:PanelBody>
				</b:Panel>

				<b:Panel>
					<b:PanelHeader>
						<b:Heading size="H3" text="Vertical cross section"/>
					</b:PanelHeader>
					<b:PanelBody>
						<g:Label text="body" />
					</b:PanelBody>
				</b:Panel>

				<b:Panel>
					<b:PanelHeader>
						<b:Heading size="H3" text="Horizontal cross section"/>
					</b:PanelHeader>
					<b:PanelBody>
						<g:Label text="body" />
					</b:PanelBody>
				</b:Panel>

				<b:Panel>
					<b:PanelHeader>
						<b:Heading size="H3" text="Horizontal cross section"/>
					</b:PanelHeader>
					<b:PanelBody>
						<g:Label text="body" />
					</b:PanelBody>
				</b:Panel>

				<b:Panel>
					<b:PanelHeader>
						<b:Heading size="H3" text="Horizontal cross section"/>
					</b:PanelHeader>
					<b:PanelBody>
						<g:Label text="body" />
					</b:PanelBody>
				</b:Panel>

				<b:Panel>
					<b:PanelHeader>
						<b:Heading size="H3" text="Horizontal cross section"/>
					</b:PanelHeader>
					<b:PanelBody>
						<g:Label text="body" />
					</b:PanelBody>
				</b:Panel>

				<b:Panel>
					<b:PanelHeader>
						<b:Heading size="H3" text="Horizontal cross section"/>
					</b:PanelHeader>
					<b:PanelBody>
						<g:Label text="body" />
					</b:PanelBody>
				</b:Panel>

				<b:Panel>
					<b:PanelHeader>
						<b:Heading size="H3" text="Horizontal cross section"/>
					</b:PanelHeader>
					<b:PanelBody>
						<g:Label text="body" />
					</b:PanelBody>
				</b:Panel>

				<b:Panel>
					<b:PanelHeader>
						<b:Heading size="H3" text="Horizontal cross section"/>
					</b:PanelHeader>
					<b:PanelBody>
						<g:Label text="body" />
					</b:PanelBody>
				</b:Panel>

				<b:Panel>
					<b:PanelHeader>
						<b:Heading size="H3" text="Horizontal cross section"/>
					</b:PanelHeader>
					<b:PanelBody>
						<g:Label text="body" />
					</b:PanelBody>
				</b:Panel>

				<b:Panel>
					<b:PanelHeader>
						<b:Heading size="H3" text="Horizontal cross section"/>
					</b:PanelHeader>
					<b:PanelBody>
						<g:Label text="body" />
					</b:PanelBody>
				</b:Panel>

				<b:Panel>
					<b:PanelHeader>
						<b:Heading size="H3" text="Horizontal cross section"/>
					</b:PanelHeader>
					<b:PanelBody>
