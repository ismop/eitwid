<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	<ui:style>
		.panel {
			width: 100%;
			height: 100%;
			background-color: white;
		}

		.slider {
			padding-top: 30px;
		}

		.panels {
			margin: 15px;
		}

		.scroll-panel {
			height:  literal("calc(100% - 155px)");;
			width: 100%;
		}

		.actions {
			height: 50px;
			width: 100%;
			text-align: center;
		}

		.action-button {
			margin: 10px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panel}">
		<g:FlowPanel ui:field="sliderPanel" addStyleNames="{style.slider}" />
		<hr />
		<g:ScrollPanel addStyleNames="{style.scroll-panel}">
			<g:FlowPanel ui:field="panels" addStyleNames="{style.panels}" />
		</g:ScrollPanel>
		<g:FlowPanel addStyleNames="{style.actions}">
			<b:Button ui:field="addChart" text="Add chart..." icon="PLUS" addStyleNames="{style.action-button}"/>
			<b:Button ui:field="addHorizontalCS" text="Add horizontal cross section..." icon="PLUS" addStyleNames="{style.action-button}"/>
			<b:Button ui:field="addVerticalCS" text="Add vertical cross section..." icon="PLUS" addStyleNames="{style.action-button}"/>
		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder>