<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
		xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	<ui:with type="pl.ismop.web.client.widgets.weather.WeatherStationViewMessages" field="messages"/>
	<ui:style>
		.progress {
			text-align: center;
		}
	</ui:style>
	<g:HTMLPanel>
		<b:Modal ui:field="modal" title="{messages.weatherStation}" fade="true" width="1200px">
			<b:ModalBody>
				<g:FlowPanel ui:field="progress" visible="false" addStyleNames="{style.progress}">
					<b:Icon type="CIRCLE_O_NOTCH" spin="true" title="{messages.loadingLabel}"/>
				</g:FlowPanel>
				<g:FlowPanel ui:field="message"/>
				<b:Container ui:field="dataContainer" fluid="true" visible="false">
					<b:Row>
						<b:Column size="MD_6">
							<b:Heading ui:field="weatherHeading1" size="H4"/>
							<g:FlowPanel ui:field="firstChartSlot"/>
						</b:Column>
						<b:Column size="MD_6">
							<b:Heading ui:field="weatherHeading2" size="H4"/>
							<g:FlowPanel ui:field="secondChartSlot"/>
						</b:Column>
					</b:Row>
				</b:Container>
			</b:ModalBody>
		</b:Modal>
	</g:HTMLPanel>
</ui:UiBinder>