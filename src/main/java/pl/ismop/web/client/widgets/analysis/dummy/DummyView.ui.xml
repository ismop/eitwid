<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'>
    <g:HTMLPanel>
        <b:Label ui:field="label" text="No experiment and date selected"/>

        <b:Button ui:field="showDevice1" text="Show device 1" />
        <b:Button ui:field="showDevice2" text="Show device 2" />

        <b:Button ui:field="selectDevice1" text="Select device 1" />
        <b:Button ui:field="unselectDevice1" text="Unselect device 1" />

        <b:Button ui:field="selectDevice2" text="Select device 2" />
        <b:Button ui:field="unselectDevice2" text="Unselect device 2" />

        <b:Button ui:field="showProfile1" text="Show profile 1" />
        <b:Button ui:field="showProfile2" text="Show profile 2" />
    </g:HTMLPanel>
</ui:UiBinder>