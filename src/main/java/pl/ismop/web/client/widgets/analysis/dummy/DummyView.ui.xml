<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'>
    <g:HTMLPanel>
        <b:Label ui:field="label" text="No experiment and date selected"/>

        <b:Button ui:field="addDevice" text="Add device" />
        <b:Button ui:field="rmDevice" text="Rm device" />

        <b:Button ui:field="addSection" text="Add section" />
        <b:Button ui:field="rmSection" text="Rm section" />

        <b:Button ui:field="addProfile" text="Add profile" />
        <b:Button ui:field="rmProfile" text="Rm profile" />

        <b:Button ui:field="selectDevice" text="Select device" />
        <b:Button ui:field="unselectDevice" text="Unselect device" />

        <b:Button ui:field="selectSection" text="Select section" />
        <b:Button ui:field="unselectSection" text="Unselect section" />

        <b:Button ui:field="selectProfile" text="Select profile" />
        <b:Button ui:field="unselectProfile" text="Unselect profile" />

        <b:Button ui:field="highlightDevice" text="Highlight device" />
        <b:Button ui:field="unhighlightDevice" text="Unhighlight device" />

        <b:Button ui:field="highlightSection" text="Highlight section" />
        <b:Button ui:field="unhighlightSection" text="Unhighlight section" />

        <b:Button ui:field="highlightProfile" text="Highlight profile" />
        <b:Button ui:field="unhighlightProfile" text="Unhighlight profile" />
    </g:HTMLPanel>
</ui:UiBinder>