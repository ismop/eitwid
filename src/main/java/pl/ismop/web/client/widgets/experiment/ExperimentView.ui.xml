<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
		xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
		xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:with type="pl.ismop.web.client.widgets.experiment.ExperimentMessages" field="messages"/>
	<ui:style>
		.sensors {
			margin-top: 5px;
		}
		.plot {
			width: 600px;
			height: 400px;
		}
		.control {
			margin-top: 5px;
		}
		.panel {
			width: 800px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panel}">
		<b:PanelGroup b:id="parent">
			<b:Panel>
				<b:PanelHeader>
					<b:Anchor dataToggle="COLLAPSE" dataParent="#parent" dataTarget="#main" text="{messages.mainPanelTitle}"/>
				</b:PanelHeader>
				<b:PanelCollapse b:id="main" in="true" ui:field="waveCollapse">
					<b:PanelBody>
						<b:Form type="HORIZONTAL">
							<b:FieldSet>
								<b:FormGroup>
									<b:FormLabel addStyleNames="col-lg-4">Nazwa</b:FormLabel>
									<g:FlowPanel addStyleNames="col-lg-8">
										<b:FormControlStatic>Pierwszy eksperyment zalewania</b:FormControlStatic>
									</g:FlowPanel>
								</b:FormGroup>
								<b:FormGroup>
									<b:FormLabel addStyleNames="col-lg-4">Czas rozpoczęcia</b:FormLabel>
									<g:FlowPanel addStyleNames="col-lg-8">
										<b:FormControlStatic>16 czerwca 2015, 12:00</b:FormControlStatic>
									</g:FlowPanel>
								</b:FormGroup>
								<b:FormGroup>
									<b:FormLabel addStyleNames="col-lg-4">Czas zakończenia</b:FormLabel>
									<g:FlowPanel addStyleNames="col-lg-8">
										<b:FormControlStatic>brak</b:FormControlStatic>
									</g:FlowPanel>
								</b:FormGroup>
							</b:FieldSet>
						</b:Form>
						<b.html:Paragraph>Symulowana fala</b.html:Paragraph>
						<g:FlowPanel ui:field="wave"/>
					</b:PanelBody>
				</b:PanelCollapse>
			</b:Panel>
			<b:Panel>
				<b:PanelHeader>
					<b:Anchor dataToggle="COLLAPSE" dataParent="#parent" dataTarget="#pomps" text="{messages.pompsPanelTitle}"/>
				</b:PanelHeader>
				<b:PanelCollapse b:id="pomps">
					<b:PanelBody>
						<g:FlowPanel ui:field="blog">
							<b:BlockQuote>
								<b.html:Paragraph>Nastawa pomp: 2000 l/h</b.html:Paragraph>
								<b.html:Small>Jan Nowak dnia 23.03.2015 o godzinie 15:56</b.html:Small>
							</b:BlockQuote>
							<b:BlockQuote>
								<b.html:Paragraph>Nastawa pomp: 3000 l/h</b.html:Paragraph>
								<b.html:Small>Dominik Kowal dnia 24.03.2015 o godzinie 16:26</b.html:Small>
							</b:BlockQuote>
						</g:FlowPanel>
						<b:ListBox ui:field="type" addStyleNames="{style.control}">
							<g:item>Nastawa pomp</g:item>
							<g:item>Poziom wody</g:item>
						</b:ListBox>
						<b:TextBox ui:field="message" addStyleNames="{style.control}"/>
						<b:Button ui:field="add" addStyleNames="{style.control}">Dodaj</b:Button>
					</b:PanelBody>
				</b:PanelCollapse>
			</b:Panel>
			<b:Panel>
				<b:PanelHeader>
					<b:Anchor dataToggle="COLLAPSE" dataParent="#parent" dataTarget="#plots" text="{messages.plotsPanelTitle}"/>
				</b:PanelHeader>
				<b:PanelCollapse b:id="plots" ui:field="plotCollapse">
					<b:PanelBody>
						<b:NavTabs>
							<b:AnchorListItem active="true">Sekcja 1</b:AnchorListItem>
							<b:AnchorListItem>Sekcja 2</b:AnchorListItem>
							<b:AnchorListItem>Sekcja 3</b:AnchorListItem>
							<b:AnchorListItem>Stacja Meteo</b:AnchorListItem>
						</b:NavTabs>
						<b:ListBox ui:field="sensors" addStyleNames="{style.sensors}"/>
						<g:FlowPanel ui:field="plot" addStyleNames="{style.plot}"/>
					</b:PanelBody>
				</b:PanelCollapse>
			</b:Panel>
			<b:Panel>
				<b:PanelHeader>
					<b:Anchor dataToggle="COLLAPSE" dataParent="#parent" dataTarget="#compare" text="{messages.comparePanelTitle}"/>
				</b:PanelHeader>
				<b:PanelCollapse b:id="compare">
					<b:PanelBody ui:field="analysisBody"/>
				</b:PanelCollapse>
			</b:Panel>
		</b:PanelGroup>
	</g:HTMLPanel>
</ui:UiBinder>