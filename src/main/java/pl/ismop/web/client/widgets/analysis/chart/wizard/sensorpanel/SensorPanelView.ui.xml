<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:select='urn:import:org.gwtbootstrap3.extras.select.client.ui'>
    <ui:with type="pl.ismop.web.client.widgets.analysis.chart.wizard.sensorpanel.SensorPanelMessages" field="messages"/>
    <ui:style>
        .close-button:hover {
            color: red;
        }

        .window-buttons {
            margin: -2px -10px 0 0;
        }

        .panel:focus {
            outline: none;
        }

        .devices-select {
            margin: -10px 0 -10px -12px !important;
        }
    </ui:style>
    <g:FocusPanel ui:field="panelWrapper" addStyleNames="{style.panel}">
        <b:Panel ui:field="panel">
            <b:PanelHeader>
                <b:Heading ui:field="heading" size="H3">
                    <b:Row>
                        <b:Column size="MD_8">
                        <select:Select ui:field="devices" liveSearch="true" addStyleNames="{style.devices-select}">
                            <select:Option text="Device 1"/>
                            <select:Option text="Device 2"/>
                            <select:Option text="Device 3"/>
                        </select:Select>
                        </b:Column>
                        <b:Column size="MD_4">
                        <b:ButtonGroup addStyleNames="pull-right {style.window-buttons}">
                            <b:Button ui:field="closeButton" icon="CLOSE" addStyleNames="{style.close-button}"
                                      size="EXTRA_SMALL" title="{messages.closeButtonTooltip}"/>
                        </b:ButtonGroup>
                        </b:Column>
                    </b:Row>
                </b:Heading>
            </b:PanelHeader>
            <b:PanelBody ui:field="panelBody" />
        </b:Panel>
    </g:FocusPanel>
</ui:UiBinder>