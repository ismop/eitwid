<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
		xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	<ui:style>
		.logout {
			padding-right: 10px;
		}
	</ui:style>
	<g:DockLayoutPanel>
		<g:north size="50">
			<b:Navbar>
				<b:NavbarBrand href="/">ISMOP</b:NavbarBrand>
					<b:NavbarNav>
						<b:AnchorListItem active="true">Levees</b:AnchorListItem>
						<b:AnchorListItem active="true">Sensors</b:AnchorListItem>
					</b:NavbarNav>
					<b:NavbarText pull="RIGHT">
						<b:NavbarLink href="/logout" icon="SIGN_OUT" text="Logout" addStyleNames="{style.logout}"/>
					</b:NavbarText>
			</b:Navbar>
		</g:north>
		<g:center>
			<g:HTMLPanel ui:field="mapPanel"/>
		</g:center>
		<g:south size="100">	
			<g:HTMLPanel ui:field="detailsPanel"/>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder>